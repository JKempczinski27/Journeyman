# Monitoring Configuration
# Copy this to your .env file and configure as needed

# ===========================
# Health Check Configuration
# ===========================
HEALTH_CHECK_INTERVAL=60000  # Interval in ms (default: 60000 = 1 minute)

# Database Configuration (for health checks)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=journeyman
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379

# ===========================
# Alert Notification Configuration
# ===========================

# Email Alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=admin@example.com,ops@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=alerts@journeyman.com

# Webhook Alerts
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URLS=https://hooks.example.com/alert1,https://hooks.example.com/alert2
ALERT_WEBHOOK_HEADERS={"Authorization": "Bearer your_token"}

# Slack Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Alerts (for critical issues)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# ===========================
# Alert Thresholds
# ===========================
ALERT_ERROR_RATE_THRESHOLD=10        # Errors per minute before alert
ALERT_RESPONSE_TIME_THRESHOLD=5000   # Response time in ms before alert
ALERT_CPU_THRESHOLD=90               # CPU usage percentage before alert
ALERT_MEMORY_THRESHOLD=90            # Memory usage percentage before alert

# ===========================
# Monitoring Endpoints Security
# ===========================
# Protect monitoring endpoints with API key (recommended for production)
MONITORING_API_KEY=your_monitoring_api_key

# ===========================
# External Monitoring Services (Optional)
# ===========================

# Datadog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# New Relic
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
NEW_RELIC_APP_NAME=journeyman-backend

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Splunk
SPLUNK_HEC_URL=https://your-splunk-instance.com:8088
SPLUNK_HEC_TOKEN=your_splunk_token

# ===========================
# AWS CloudWatch (Optional)
# ===========================
AWS_CLOUDWATCH_ENABLED=false
AWS_CLOUDWATCH_NAMESPACE=Journeyman
AWS_CLOUDWATCH_REGION=us-east-1
